---
interface Props {
  class?: string
}
const { class: className } = Astro.props
---

<div class:list={["line", className]}></div>

<style lang="scss">
  @use 'sass:math';
  @use "@styles/global/" as *;

  .line {
    width: 100%;
    height: 100%;
    border-right: 1px solid var(--color-theme-current);
    transition: border-color cubic-bezier(0.83, 0, 0.17, 1) 1s;
  }
</style>
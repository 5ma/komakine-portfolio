---
interface Props {
  class?: string
}
const { class: className } = Astro.props
---

<div
  class:list={["line", className]}
  data-change-color-target
  data-change-color-delay="10"
  data-change-color-func="border"
></div>

<style lang="scss">
  @use 'sass:math';
  @use "@styles/global/" as *;

  .line {
    width: 100%;
    height: 100%;
    border-right: 1px solid;
  }
</style>